{
  "name": "cx-traefik-forward-auth",
  "version": "1.0.0",
  "description": "Forward authentication service that provides OIDC authentication (jwt & introspection) and/or acts as OIDC client for the traefik reverse proxy. ",
  "main": "app.js",
  "repository": "git@github.com:Creoox/cx-traefik-forward-auth.git",
  "author": "and-ratajski <andrzej.ratajski@effiware.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "start": "node dist/app.js",
    "start:dev": "ts-node-dev --respawn ./src/app.ts",
    "start:demo": "ts-node --transpile-only ./src/app.ts"
  },
  "dependencies": {
    "axios": "^1.1.3",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "jose": "^4.11.0",
    "node-cache": "^5.1.2",
    "openid-client": "^5.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/express-session": "^1.17.5",
    "@types/jest": "^29.2.2",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@types/node-cache": "^4.2.5",
    "@types/openid-client": "^3.7.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0"
  }
